#modalHardware.modal.fade(tabindex="-1" aria-labelledby="modalHardware" aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header.bg-dark.bg-gradient.text-white
        h5(class="modal-title" id="exampleModalLabel") Editar Hardware
        button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
      .modal-body.bg-secondary.bg-gradient.text-light
        form(action="/update" method="POST")
          input(name="edit_id" id="edit_id" type="text" hidden)
          .mb-3
            label(for="nombre" class="form-label") Nombre
            input(type="text" class="form-control" id="edit_nombre" name="nombre" aria-describedby="nombreHelp")
            #nombreHelp.form-text.text-warning Ingresa el nuevo nombre...
          .mb-3
            label(for="modelo" class="form-label") Modelo
            input(type="modelo" class="form-control" id="edit_modelo" name="modelo" aria-describedby="modeloHelp")
            #modeloHelp.form-text.text-warning Ingresa el nuevo modelo...
          .mb-3
            label(for="marca" class="form-label") Marca
            input(type="marca" class="form-control" id="edit_marca" name="marca" aria-describedby="marcaHelp")
            #marcaHelp.form-text.text-warning Ingresa la nueva marca...
          .mb-3
            label(for="descripcion" class="form-label") Descripcion
            input(type="descripcion" class="form-control" id="edit_descripcion" name="descripcion" aria-describedby="descripcionHelp")
            #descripcionHelp.form-text.text-warning Ingresa la nueva descripcion...
          .mb-3
            label(for="link" class="form-label") Link de imagen
            input(type="link" class="form-control" id="edit_link" name="link" aria-describedby="linkHelp")
            #linkHelp.form-text.text-warning Ingresa el nuevo link...
          .d-grid 
            button(type="submit" class="btn btn-primary") Actualizar